<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogory</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
<style>
  /* Override Bootstrap primary button color */
  .btn-primary {
    background-color: #334a8a;
    border-color: #334a8a;
    color: #fff;
  }

  .btn-primary:hover,
  .btn-primary:focus,
  .btn-primary:active,
  .btn-primary.active,
  .btn-primary.focus,
  .btn-primary:active:focus {
    background-color: #2a3d70; /* a slightly darker shade for hover */
    border-color: #2a3d70;
    color: #fff;
  }

  .btn-primary:disabled,
  .btn-primary.disabled {
    background-color: #334a8a;
    border-color: #334a8a;
    opacity: 0.65;
    color: #fff;
  }
</style>


  </head>
  <body>
    <%- include("partials/header") %>

    <!-- Banner Section -->
    <div class="container-fluid p-0">
      <div class="position-relative">
        <!-- Banner Image -->
        <img
          src="images/inspired-upbeat-dreamy-fascinated-redhead-girl-writing-down-interesting-lecture-smiling-gazi.jpg"
          class="img-fluid w-100"
          alt="Blog Banner"
          style="max-height: 400px; object-fit: cover"
        />

        <!-- Overlay content -->
        <div class="position-absolute top-50 start-50 translate-middle text-center">
          <h1 class="text-white fw-bold">Welcome to Blogory</h1>
          <a href="/compose" class="btn btn-primary">Create a New Post</a>
        </div>
      </div>
    </div>

    <!-- Posts Section  -->
    <div class="container mt-4">
      <div class="row">
        <% if (posts.length === 0) { %>
          <div class="col-12 text-center py-5">
            <h4 class="text-muted">
              No posts available yet. Be the first to
              <a href="/compose">create a new post</a>!
            </h4>
          </div>
        <% } else { %>
          <% posts.forEach((post) => { %>
            <div class="col-md-4 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">
                    <a href="/post/<%= post.id %>" style="text-decoration: none"><%= post.title %></a>
                  </h5>
                  <p class="card-text">
                    <% if (post.body.length > 150) { %>
                      <%= post.body.substring(0, 150) + "..." %>
                      <a href="/post/<%= post.id %>">Read More</a>
                    <% } else { %>
                      <%= post.body %>
                    <% } %>
                  </p>

                  <div class="d-flex gap-2">
                    <a href="/edit/<%= post.id %>" class="btn btn-primary">Edit</a>
                    <form action="/delete/<%= post.id %>" method="POST">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>
    </div>

    <%- include("partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
